-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get, id: "ratings_form" do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @check_hash.has_key?(rating)
  = submit_tag 'Refresh', id: "ratings_submit"

%table#movies
  %thead
    %tr
      %th{:class => @title_header, :id => "title_header"}= link_to 'Movie Title', movies_path(:sort_method => 'movie_title')
      %th Rating
      %th{:class => @release_date_header, :id => "release_date_header"}= link_to 'Release Date', movies_path(:sort_method => 'date_released')
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path


